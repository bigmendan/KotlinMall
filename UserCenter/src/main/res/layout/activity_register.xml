<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.activity.RegisterActivity">


    <TextView
            android:layout_width="match_parent"
            android:text="注册"
            android:id="@+id/mRegisterTv"
            android:textSize="23sp"
            android:textColor="@color/common_white"
            android:background="@color/common_blue"
            android:gravity="center"
            android:layout_height="50dp"/>

    <LinearLayout
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            style="@style/MatchMatch.Vertical">

        <LinearLayout
                android:layout_marginTop="20dp"
                style="@style/MatchWrap">

            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/mMobileEt"
                    android:hint="请输入手机号"
                    android:layout_height="wrap_content"/>

            <com.kotlin.base.widgets.VerifyButton
                    android:id="@+id/mVerifyCodeBtn"
                    style="@style/WrapMatch"
                    android:textColor="@color/common_blue"
                    android:background="@null"
                    android:text="获取验证码"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="20dp"
                style="@style/MatchWrap">

            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/mPasswordEt"
                    android:hint="请输入密码"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="20dp"
                style="@style/MatchWrap">

            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/mRepasswordEt"
                    android:hint="再次输入密码"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
                android:layout_marginTop="20dp"
                android:text="注册"
                android:textColor="@color/common_white"
                android:background="@drawable/btn_register_enable"
                android:id="@+id/mRegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

    </LinearLayout>


</LinearLayout>